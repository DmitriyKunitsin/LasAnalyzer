<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
		xmlns:local="using:LasAnalyzer.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LasAnalyzer.Views.GraphWindow"
		x:DataType="local:GraphWindowViewModel"
        Title="GraphWindow">

	<Window.DataContext>
		<local:GraphWindowViewModel />
	</Window.DataContext>

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<lvc:CartesianChart
			Series="{Binding Series}"
			Title="{Binding Title}">
		</lvc:CartesianChart>
		<lvc:CartesianChart
			Series="{Binding FarProbeModel}">
		</lvc:CartesianChart>
		<lvc:CartesianChart
			Series="{Binding FarToNearProbeRatioModel}">
		</lvc:CartesianChart>
		<lvc:CartesianChart
			Series="{Binding TemperatureModel}">
		</lvc:CartesianChart>

		<Button Content="Update" Command="{Binding UpdateGraphs}" />
	</StackPanel>
</Window>
